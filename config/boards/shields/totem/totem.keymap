                      &kp Z                 &kp TAB   &lt 2 SPACE &kp LSHFT                &kp BSPC   &lt 1 RET &kp DEL              &kp FSLH
        //          ╰──────────╯          ╰──────────┴──────────┴──────────╯             ╰──────────┴──────────┴──────────╯          ╰──────────╯
                        >;
                };
                sym_layer {
                        bindings = <
        //          ╭──────────┬──────────┬──────────┬──────────┬──────────╮             ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                      &kp EXCL   &kp AT     &kp HASH   &kp DLLR   &kp PRCNT                &kp CARET  &kp AMPS   &kp ASTRK  &kp GRAVE  &kp TILDE
        //          ├──────────┼──────────┼──────────┼──────────┼──────────┤             ├──────────┼──────────┼──────────┼──────────┼──────────┤
                      &kp SEMI   &kp LBKT   &kp LBRC   &kp LPAR   &kp MINUS                &kp EQUAL  &kp BSLH   ___        ___        ___   
        //╭─────────├──────────┼──────────┼──────────┼──────────┼──────────┤             ├──────────┼──────────┼──────────┼──────────┼──────────┤──────────╮ 
            &kp ESC              &kp RBKT   &kp RBRC   &kp RPAR   &kp UNDER                &kp PLUS   &kp PIPE   ___        ___                   ___   
        //╰─────────┴──────────┴──────────┴──────────┼──────────┼──────────┤             ├──────────┼──────────┼──────────┴──────────┴──────────┴──────────╯
                      &kp COLON             ___        ___         ___                     ___        ___         ___                  &kp FSLH
        //          ╰──────────╯          ╰──────────┴──────────┴──────────╯             ╰──────────┴──────────┴──────────╯          ╰──────────╯
            >;
        };
                num_layer  {
                        bindings = <
        //          ╭──────────┬──────────┬──────────┬──────────┬──────────╮             ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                      &kp N1     &kp N2     &kp N3     &kp N4     &kp N5                   &kp N6     &kp N7     &kp N8     &kp N9     &kp N0
        //          ├──────────┼──────────┼──────────┼──────────┼──────────┤             ├──────────┼──────────┼──────────┼──────────┼──────────┤
                      &kp K_REDO &kp LALT   &kp LCTRL  &kp LGUI   &kp PSCRN                &kp PG_UP   ___       &kp UARW   ___        &kp HOME 
        //╭─────────├──────────┼──────────┼──────────┼──────────┼──────────┤             ├──────────┼──────────┼──────────┼──────────┼──────────┼───────────╮
            &kp ESC              &kp K_CUT  &kp K_COPY &kp K_PASTE &kp CAPS                &kp PG_DN  &kp LARW   &kp DARW   &kp RARW               ___    
        //╰─────────┴──────────┴──────────┴──────────┼──────────┼──────────┤             ├──────────┼──────────┼──────────┴──────────┴──────────┴───────────╯
                      &kp K_UNDO            ___        &mo 3     ___                      ___         &mo 3      ___                  &kp END
        //          ╰──────────╯          ╰──────────┴──────────┴──────────╯             ╰──────────┴──────────┴──────────╯          ╰──────────╯
            >;
        };
                tri_layer {
                        bindings = <     
        //          ╭──────────┬──────────┬──────────┬───────────┬────────────╮           ╭────────────┬────────────┬──────────┬───────────┬──────────╮
                      &kp F1     &kp F2     &kp F3     &kp F4     &bt BT_SEL 0             &bt BT_SEL 2  ___           &to 4   &kp C_MUTE  &kp C_NEXT
        //          ├──────────┼──────────┼──────────┼───────────┼────────────┤           ├────────────┼────────────┼──────────┼───────────┼──────────┤
                      &kp F5     &kp F6     &kp F7     &kp F8     &bt BT_SEL 1             &bt BT_SEL 3  &kp C_BRI_UP  ___      &kp C_VOL_UP  &kp C_PP
        //╭─────────├──────────┼──────────┼──────────┼───────────┼────────────┤           ├────────────┼────────────┼──────────┼───────────┼──────────┼───────────╮
            ___                  &kp F10    &kp F11    &kp F12     &bt BT_CLR              &bt BT_SEL 4  &kp C_BRI_DEC ___      &kp C_VOL_DN            ___
        //╰─────────╰──────────┴──────────┴──────────┼───────────┼────────────┤           ├────────────┼────────────┼──────────┴───────────┴──────────┴───────────╯ 
                       &kp F9               ___        ___         &bootloader              &bootloader   ___         ___                    &kp C_PREV
        //          ╰──────────╯          ╰──────────┴───────────┴────────────╯           ╰────────────┴────────────┴──────────╯           ╰──────────╯

                        >;     
                };
                 colemakdh_layer {
                        bindings = <
        //          ╭──────────┬──────────┬──────────┬──────────┬──────────╮             ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                      &kp Q      &kp W      &kp F      &kp P      &kp B                    &kp J      &kp L      &kp U      &kp Y      &kp SQT 
        //          ├──────────┼──────────┼──────────┼──────────┼──────────┤             ├──────────┼──────────┼──────────┼──────────┼──────────┤
                      &kp A      &hm LALT R &hm LCTRL S &hm LGUI T  &kp G                  &kp M     &hm RGUI N  &hm RCTRL E &hm RALT I  &kp O
        //╭─────────┼──────────┼──────────┼──────────┼──────────┼──────────┤             ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────╮
              ___                &kp X      &kp C      &kp D       &kp V                   &kp K      &kp H      &kp COMMA  &kp DOT               &kp DEL
